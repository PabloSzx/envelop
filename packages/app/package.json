{
  "name": "@envelop/app",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "exports": {
    "./express": {
      "import": "./dist/esm/express.js",
      "require": "./dist/cjs/express.js"
    },
    "./fastify": {
      "import": "./dist/esm/fastify.js",
      "require": "./dist/cjs/fastify.js"
    },
    "./nextjs": {
      "import": "./dist/esm/nextjs.js",
      "require": "./dist/cjs/nextjs.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc-node-build --clean",
    "dev": "tsc-node-watch",
    "dev:express": "tsc-node-build && concurrently --raw yarn:dev \"yarn --cwd ../../examples/app/express dev\"",
    "dev:fastify": "tsc-node-build && concurrently --raw yarn:dev \"yarn --cwd ../../examples/app/fastify dev\"",
    "dev:next": "tsc-node-build && concurrently --raw yarn:dev \"yarn --cwd ../../examples/app/nextjs dev\""
  },
  "dependencies": {
    "@envelop/core": "^0.1.2",
    "@envelop/graphql-modules": "^0.1.0",
    "@graphql-codegen/core": "^1.17.9",
    "@graphql-codegen/plugin-helpers": "^1.18.4",
    "@graphql-codegen/typed-document-node": "^1.18.4",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@graphql-tools/load": "^6.2.8",
    "@graphql-tools/load-files": "^6.3.1",
    "@graphql-tools/merge": "^6.2.13",
    "@graphql-tools/schema": "^7.1.3",
    "@graphql-tools/utils": "^7.7.1",
    "altair-express-middleware": "^4.0.2",
    "altair-fastify-plugin": "^4.0.2",
    "altair-static": "^4.0.2",
    "fastify-websocket": "^3.1.0",
    "graphql": "^15.5.0",
    "graphql-helix": "1.2.3",
    "graphql-modules": "^1.4.2",
    "graphql-scalars": "^1.9.0",
    "graphql-ws": "^4.4.1",
    "mime-types": "^2.1.30",
    "mkdirp": "^1.0.4",
    "prettier": "^2.2.1",
    "subscriptions-transport-ws": "^0.9.18",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/mime-types": "2.1.0",
    "@types/mkdirp": "^1.0.1",
    "@types/ws": "^7.4.1",
    "concurrently": "^6.0.2",
    "esbuild": "^0.11.11",
    "express": "^4.17.1",
    "fastify": "^3.14.2",
    "next": "^10.1.3",
    "tsc-node-build": "^3.0.1",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@types/express": "^4.17.11",
    "express": "^4.17.1",
    "fastify": "^3.14.2",
    "next": "^10.1.3"
  },
  "peerDependenciesMeta": {
    "@types/express": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
