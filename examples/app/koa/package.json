{
  "name": "example-app-koa",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:mjs",
    "dev:cjs": "tsup src/index.ts --target node12 --format cjs --sourcemap --no-splitting --clean --watch src --onSuccess \"node dist/index.js\"",
    "dev:mjs": "tsup src/index.ts --target es2020 --format esm --sourcemap --no-splitting --clean --watch src --onSuccess \"node dist/index.mjs\"",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.1.0",
    "@koa/router": "^10.0.0",
    "@pablosz/envelop-app": "workspace:^",
    "altair-koa-middleware": "^4.0.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0"
  },
  "devDependencies": {
    "@pablosz/tsup": "^0.1.4",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.4",
    "@types/node": "^14.14.41",
    "esbuild": "^0.11.14",
    "typescript": "^4.2.4"
  }
}
