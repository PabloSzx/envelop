    "koa-bodyparser": "^4.3.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.4",
    "@types/node": "^15.6.1",
    "tsup": "^4.11.1",
    "typescript": "^4.3.2"
  }
}
